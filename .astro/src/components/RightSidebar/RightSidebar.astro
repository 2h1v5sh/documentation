---
import TableOfContents from "./TableOfContents.tsx"
import MoreMenu from "./MoreMenu.astro"
import { Feedback } from "../PageContent/Feedback"
const { content, githubEditUrl, headings } = Astro.props
---

<nav class="sidebar-nav" aria-labelledby="grid-right">
  <div class="sidebar-nav-inner">
    <TableOfContents client:media="(min-width: 50em)" headers={headings} />
    <MoreMenu editHref={githubEditUrl} />

    <h2 class="heading feedback-title">Feedback</h2>
    <div class="feedback-wrapper">
      <Feedback client:idle />
    </div>
  </div>
</nav>

<style>
  .feedback-wrapper {
    padding-left: var(--space-4x);
    margin-top: var(--space-2x);
  }
  .sidebar-nav {
    width: 100%;
    position: sticky;
    top: 0;
  }

  .sidebar-nav-inner {
    height: 100%;
    padding: 0;
    padding-top: var(--doc-padding);
    overflow: auto;
  }

  .sidebar-nav-inner h2 {
    margin: var(--space-4x) 0 0 0;
  }
</style>
